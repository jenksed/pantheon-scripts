{
    "name": "pantheon-scripts/pantheon-cli",
    "description": "A Symfony Console CLI for Pantheon site automation",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PantheonCli\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.4",
        "symfony/process": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "bin": ["bin/pantheon-cli"],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}